---
import { astroI18n, t } from "astro-i18n";
import Layout from "../components/Layout.astro";
astroI18n.init(Astro);
---

<Layout>
  <!-- <div class="absolute top-0 min-w-[600px] h-[200px] bg-primary opacity-30 "></div> -->
  <img src="/assets/home_purple_shape.svg" class="absolute -top-20 md:-top-28 " aria-hidden="true" />
  <section class="grid place-items-center min-h-[70vh]" >
    <div class="m-auto">
      <figure class="mx-auto md:max-w-240px max-w-200px">
        <img  alt="3D gem" src="/assets/gem.png"  class="w-full" />
      </figure>
      <div class="text-center mx-auto max-w-xl" >
        <h1 class="font-sans text-3xl md:text-6xl text-white" >{t("home.hero.title")}</h1>
        <p class="text-base md:text-xl mt-6 max-w-md mx-auto">{t("home.hero.subtitle")}</p>
      </div>

      <p class="bg-neutral-400 focus:outline-2 focus:outline-red-300 i-carbon-arrow-down" />
    </div>
  </section>
  <section class="min-h-screen">
    <h2>
      {t("home.services.title")}
    </h2>
  </section>
</Layout>
