---
import { astroI18n, t } from "astro-i18n";
import Layout from "../components/Layout.astro";
astroI18n.init(Astro);
---

<Layout>
  <div class="absolute -top-36 w-100vh left-[50%] right-[50%] -translate-x-[50%]  h-[200px]  bg-#342B6C blur-150px "></div>
  <!-- <img src="/assets/home_purple_shape.svg" class="absolute  -top-20 md:-top-28 " aria-hidden="true" /> -->
  

  <section class="grid place-items-center min-h-screen" >
    <div class="m-auto">
      <figure class="mx-auto md:max-w-240px max-w-200px">
        <img  alt="3D gem" src="/assets/gem.png"  class="w-full" />
      </figure>
      <div class="text-center mx-auto max-w-xl" >
        <h1 class="heading-1" >{t("home.hero.title")}</h1>
        <p class="text-base md:text-xl mt-6 max-w-md mx-auto">{t("home.hero.subtitle")}</p>
      </div>

      <p class="bg-neutral-400 focus:outline-2 focus:outline-red-300 i-carbon-arrow-down" />
    </div>
  </section>
  <section class="min-h-screen">
  <div class="mx-auto text-center">
    <h2 class="heading-1">
      {t("home.services.title")}
    </h2>
    <h3  class="heading-2 text-gradient">{t("home.services.subtitle")} </h3>

    </div>
      
    <div class="flex justify-around max-w-6xl mx-auto mt-40">
      <!-- Card -->
      <div class="w-30% max-w-200px">
        <div class="min-h-200px w-full rounded-tl-2xl rounded-br-2xl bg-indigo-300" >
        </div>
        <p>Frontend </p>
        <p class="bg-neutral-400 focus:outline-2 focus:outline-red-300 i-carbon-arrow-right" />
      </div>
      <div class="w-30% max-w-200px">
        <div class="min-h-200px w-full rounded-tl-2xl rounded-br-2xl bg-indigo-300" >
        </div>
        <p>Frontend </p>
        <p class="bg-neutral-400 focus:outline-2 focus:outline-red-300 i-carbon-arrow-right" />
      </div>
      <div class="w-30% max-w-200px">
        <div class="min-h-200px w-full rounded-tl-2xl rounded-br-2xl bg-indigo-300" >
        </div>
        <p>Frontend </p>
        <p class="bg-neutral-400 focus:outline-2 focus:outline-red-300 i-carbon-arrow-right" />
      </div>

    </div>
  </section>
</Layout>
